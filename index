  <script>
    // Sample data – plug in your full GW1 dataset here
    const players = [
      // Dublin
      { name: "Con O'Callaghan", county: "Dublin", position: "FWD", price: 10.5, goals: 0, points: 8, minutes: 75, card: null, fantasy_points: 29 },
      { name: "Evan Comerford", county: "Dublin", position: "GK", price: 6.0, goals: 0, points: 0, minutes: 75, card: null, fantasy_points: 4 },
      { name: "Brian Howard", county: "Dublin", position: "MID", price: 8.0, goals: 0, points: 0, minutes: 75, card: "black", fantasy_points: 3 },

      // Donegal
      { name: "Michael Langan", county: "Donegal", position: "MID", price: 9.5, goals: 0, points: 6, minutes: 75, card: null, fantasy_points: 23 },
      { name: "Shea Malone", county: "Donegal", position: "FWD", price: 7.5, goals: 1, points: 0, minutes: 54, card: null, fantasy_points: 11 },
      { name: "Gavin Mulreany", county: "Donegal", position: "GK", price: 5.5, goals: 0, points: 4, minutes: 75, card: null, fantasy_points: 21 },

      // Mayo
      { name: "Robbie Hennelly", county: "Mayo", position: "GK", price: 6.5, goals: 0, points: 6, minutes: 75, card: null, fantasy_points: 22 },
      { name: "Ryan O'Donoghue", county: "Mayo", position: "FWD", price: 9.0, goals: 0, points: 5, minutes: 75, card: null, fantasy_points: 20 },
      { name: "Darragh Beirne", county: "Mayo", position: "FWD", price: 7.0, goals: 1, points: 1, minutes: 49, card: null, fantasy_points: 14 },

      // Galway
      { name: "Fionn McDonagh", county: "Galway", position: "FWD", price: 9.5, goals: 1, points: 4, minutes: 75, card: null, fantasy_points: 25 },
      { name: "Robert Finnerty", county: "Galway", position: "FWD", price: 8.5, goals: 0, points: 5, minutes: 75, card: null, fantasy_points: 20 },
      { name: "Shane McGrath", county: "Galway", position: "FWD", price: 7.5, goals: 1, points: 0, minutes: 26, card: null, fantasy_points: 9 }
    ];

    const MAX_BUDGET = 100.0;
    const SLOTS_CONFIG = {
      GK: 1,
      DEF: 4,
      MID: 2,
      FWD: 3
    };

    const state = {
      selected: [], // {slotIndex, position, player}
      budgetUsed: 0
    };

    const playersContainer = document.getElementById("playersContainer");
    const filterPosition = document.getElementById("filterPosition");
    const filterCounty = document.getElementById("filterCounty");
    const playersSelectedEl = document.getElementById("playersSelected");
    const footerBudgetEl = document.getElementById("footerBudget");
    const budgetFillEl = document.getElementById("budgetFill");
    const confirmBtn = document.getElementById("confirmBtn");

    function renderPlayers() {
      const posFilter = filterPosition.value;
      const countyFilter = filterCounty.value;
      playersContainer.innerHTML = "";

      const filtered = players.filter(p => {
        if (posFilter && p.position !== posFilter) return false;
        if (countyFilter && p.county !== countyFilter) return false;
        return true;
      });

      filtered.forEach((p, index) => {
        const row = document.createElement("div");
        row.className = "player-row";
        row.dataset.index = index;

        const name = document.createElement("div");
        name.className = "player-name";
        name.textContent = p.name;

        const meta = document.createElement("div");
        meta.className = "player-meta";
        meta.textContent = `${p.county} • ${p.position}`;

        const price = document.createElement("div");
        price.className = "player-price";
        price.textContent = `€${p.price.toFixed(1)}m`;

        const fp = document.createElement("div");
        fp.className = "player-fp";
        fp.textContent = `${p.fantasy_points} pts`;

        const left = document.createElement("div");
        left.appendChild(name);
        left.appendChild(meta);

        row.appendChild(left);
        row.appendChild(document.createElement("div")); // spacer
        row.appendChild(price);
        row.appendChild(fp);

        row.addEventListener("click", () => handlePlayerClick(p));

        playersContainer.appendChild(row);
      });
    }

    function handlePlayerClick(player) {
      // find first empty slot for this position
      const slots = document.querySelectorAll(`.slot[data-slot-position="${player.position}"]`);
      let targetSlot = null;
      for (const slot of slots) {
        const nameEl = slot.querySelector("[data-slot-name]");
        if (!nameEl.textContent) {
          targetSlot = slot;
          break;
        }
      }
      if (!targetSlot) {
        alert(`All ${player.position} slots are filled.`);
        return;
      }

      // check budget
      if (state.budgetUsed + player.price > MAX_BUDGET) {
        alert("Not enough budget for this player.");
        return;
      }

      // check max 3 per county
      const countyCount = state.selected.filter(s => s.player.county === player.county).length;
      if (countyCount >= 3) {
        alert(`You already have 3 players from ${player.county}.`);
        return;
      }

      // assign to slot
      const nameEl = targetSlot.querySelector("[data-slot-name]");
      const metaEl = targetSlot.querySelector("[data-slot-meta]");
      nameEl.textContent = player.name;
      metaEl.textContent = `${player.county} • €${player.price.toFixed(1)}m • GW1 ${player.fantasy_points} pts`;

      state.selected.push({
        slot: targetSlot,
        position: player.position,
        player
      });
      state.budgetUsed += player.price;
      updateMeta();
    }

    function updateMeta() {
      const totalSlots =
        SLOTS_CONFIG.GK + SLOTS_CONFIG.DEF + SLOTS_CONFIG.MID + SLOTS_CONFIG.FWD;
      playersSelectedEl.textContent = `${state.selected.length} / ${totalSlots}`;

      const remaining = MAX_BUDGET - state.budgetUsed;
      footerBudgetEl.textContent = `Budget remaining: €${remaining.toFixed(1)}m`;

      const usedRatio = state.budgetUsed / MAX_BUDGET;
      budgetFillEl.style.width = `${Math.min(usedRatio * 100, 100)}%`;
    }

    filterPosition.addEventListener("change", renderPlayers);
    filterCounty.addEventListener("change", renderPlayers);

    confirmBtn.addEventListener("click", () => {
      const totalSlots =
        SLOTS_CONFIG.GK + SLOTS_CONFIG.DEF + SLOTS_CONFIG.MID + SLOTS_CONFIG.FWD;
      if (state.selected.length !== totalSlots) {
        alert("Please fill all positions before confirming your team.");
        return;
      }
      const names = state.selected.map(s => s.player.name);
      alert("Team confirmed:\n\n" + names.join("\n"));
    });

    renderPlayers();
    updateMeta();
  </script>
</body>
</html>
